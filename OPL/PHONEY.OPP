PROC B:
LOCAL U$(128)
U$=C$+"  Off Hook"
IF A$<>""
	U$=U$+" (Divert all calls to: "+A$+")"
ENDIF
C:(4)
GAT 2,40
GPRINTB U$,B%-4,3

PROC P:
LOCAL N$(24)
DINIT "Divert all calls"
DEDIT A$,"Divert to:",15
LOCK ON
IF DIALOG

	BUSY "Setting diversion..."
	N$=A$
	A$=""
	B:
	A$=N$
	GAT 2,60
	GPRINTB "Sending:"+"  *21*"+A$+"#",B%-4,3
	PAUSE 50
	A:
	BUSY OFF
	GIPRINT "Done"
ENDIF
LOCK OFF
ENDP

PROC S:

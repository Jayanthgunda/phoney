PROC A%:(G%)
LOCAL Q%,E%,D%
LOCAL Q$(128),S%(100)
LOCAL A%,R%,K%

Q$=CMD$(1)
R%=IOOPEN(A%,Q$,$400)

IF R% 
	GOTO A:: 
ENDIF

R%=IOREAD(A%,ADDR(S%(1)),200)

IF R%<=140 
	GOTO B:: 
ENDIF

IF S%(1)<>%O+(%P*256)
	GOTO B::
ENDIF

IF S%(2)<>%L+(%O*256)
	GOTO B::
ENDIF

K%=23+(S%(11) AND $ff)
R%=PEEKW(ADDR(S%(1))+K%)

IF R%<>%P+(%I*256)
	GOTO B::
ENDIF

IF R%=0 
	GOTO B:: 
ENDIF

CALL($5f8d,1,K%,0,0,0)

B::
IOCLOSE(A%)
A::

Q%=GLOADBIT(Q$,0,G%)
RETURN Q%
ENDP

PROC C:(F%)
LOCAL Y%,Q%
Q%=F%
GUSE 1
GAT 20,100
GGREY 0
GFILL 48,48,1
GGREY 1
GFILL 48,48,1
GUSE 1 :GGREY 0
Y%=A%:(Q%)
GUSE 1 :GGREY 0
GAT 20,100 :GCOPY Y%,0,0,48,48,0
GCLOSE Y%
GUSE 1 :GGREY 1
Y%=A%:(Q%+1)
GUSE 1 :GGREY 1
GAT 20,100 :GCOPY Y%,0,0,48,48,0
GCLOSE Y%
GGREY 0
ENDP


PROC I:(J$)
LOCAL A%,E&,D&,B&,S$(24),K$(25),C%,W%,Y%(2)
W%=IOOPEN(A%,"SND:",0)
IF W%<0
	RAISE W%
ELSE
	E&=4
	D&=2
	B&=32
	
	
	
	
	
	
	
		Y%(1)=E&+(256*D&)
		Y%(2)=B&
		K$=J$+CHR$(0)
		W%=IOW(A%,10,#UADD(ADDR(K$),1),Y%())
		IF W%<0
			RAISE W%
		ENDIF
	
	W%=IOCLOSE(A%)
	IF W%<0
		RAISE W%
	ENDIF
ENDIF
ENDP


PROC G:(T$)
LOCAL P%,L%,J%(4),N%,X%,O%
LOCAL L$(128)
L$=T$
N%=0
L:(ADDR(P%),L$,N%,0)
IOC(-2,1,L%,J%())
WHILE 1
	IOWAIT
	IF P%<>-46
		IOCANCEL(-2)
		IOWAITSTAT L%
		IF P%<0
			GIPRINT "Error Playing: "+ERR$(P%)
		ENDIF
		BREAK
	ELSEIF L%<>-46
		M:
		IOWAITSTAT P%
		GIPRINT "Cancelled"
		BREAK
	ELSE
		O%=O%+1
	ENDIF
ENDWH
WHILE O%
	IOSIGNAL
	O%=O%-1
ENDWH
ENDP

PROC L:(H%,R$,N%,I%)
LOCAL M$(128)
M$=R$+CHR$(0)
CALL($1e86,UADD(ADDR(M$),1),N%,I%,0,H%)
ENDP


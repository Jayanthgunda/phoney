C$="Status:"
G$="Connected to:"
H$="¸ Telecommunications Software 1996"

IF NOT EXIST("\opd\phoney.def")
	J:
ELSE
	K:
ENDIF

E$="Orange"
B$="0973538155"

DEFAULTWIN 1
STATUSWIN ON :FONT -$3fff,0
GBORDER 0

B%=GWIDTH :A%=GHEIGHT

GIPRINT H$

PAUSE 50

GIPRINT "Drivers loaded"

PAUSE 10

BUSY "Initialising..."
GAT 2,20
GPRINTB D$,B%-4,3
GAT 2,40
GPRINTB C$,B%-4,3

PAUSE 50

GAT 2,20
GPRINTB D$+"  Logging on...",B%-4,3

PAUSE 50

GIPRINT "Logged on to "+CHR$(34)+E$+CHR$(34)+" network"
GAT 2,20
GPRINTB D$+"  Established ("+E$+")",B%-4,3
A:
BUSY OFF

PAUSE 20


DO
	Z%=B%:
	IF Z%=$122
		MINIT
		MCARD "Connect","New call",%c,"End call",%e
		MCARD "Call divert","Divert on busy",%b,"Divert on no answer",%n,"Divert if not reachable",%r,"Cancel all diverts",%u
		MCARD "Do not disturb","Divert all calls",%a,"Divert all calls to voicemail",%v,"Silent alert",%l
		MCARD "Setup","Dialling defaults",%d
		MCARD "Special","Status",%s,"Exit",%x
		LOCK ON
		Z%=MENU AND $ffdf
		LOCK OFF
		IF Z% AND Z%<>%X
			S$="C"+CHR$(Z%)
			@(S$):
		ENDIF
	ELSEIF Z% AND $200
		Z%=(Z%-$200) AND $ffdf
		Z%=LOC(P$,CHR$(Z%))
		IF Z%
			IF Z%=5
				Z%=%X
			ELSE
				S$="C"+MID$(P$,Z%,1)
				@(S$):
			ENDIF
		ENDIF
	ELSEIF Z%=27
		DINIT "Quit TeleLink?"
		DBUTTONS "No",-%N,"Yes",%Y
		LOCK ON
		Z%=DIALOG AND $ffdf
		IF Z%=%Y
			Z%=%X
		ENDIF
		LOCK OFF
	ELSEIF Z%=291
		IF NOT EXIST (LEFT$(CMD$(1),LEN(CMD$(1))-3)+"hlp")
			GIPRINT "No help available"
		ELSE
			N:
		ENDIF
	ENDIF
UNTIL Z%=%X
ENDP

PROC B%:
LOCAL Y%(6),O$(1),T$(128)
DO
	GETEVENT Y%()
	IF Y%(1)=$404
		T$=GETCMD$
		O$=LEFT$(T$,1)
		T$=MID$(T$,2,128)
		IF O$="X"
			Y%(1)=%X
		ENDIF
	ENDIF
UNTIL NOT (Y%(1) AND $400)
RETURN Y%(1)
ENDP



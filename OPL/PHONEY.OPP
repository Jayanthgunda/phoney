PROC U:

DINIT "Call Setup"
DEDIT B$,"Number to dial:",15
LOCK ON
IF DIALOG

	BUSY "Dialling..."
	B:
	GAT 2,60
	GPRINTB "Dialling:"+"  "+B$,B%-4,3
	H:
	I:(B$)
	BUSY OFF

	PAUSE 20

	IF EXIST(F$)
		GIPRINT "Connected"
		GAT 2,60
		GPRINTB G$+"  "+B$,B%-4,3
		F:
		GAT 2,60
		GPRINTB G$+"  "+B$+" (Answered at "+RIGHT$("0"+GEN$(HOUR,2),2)+":"+RIGHT$("0"+GEN$(MINUTE,2),2)+":"+RIGHT$("0"+GEN$(SECOND,2),2)+")",B%-4,3
		GIPRINT "Call Answered"
		G:(F$)
		E:
		GIPRINT "Clearing down"
		A:
		PAUSE 20
	ELSE
		GIPRINT "Number busy"
		D:
	ENDIF
ENDIF
LOCK OFF
ENDP


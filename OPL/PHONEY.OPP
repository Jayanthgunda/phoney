PROC A:
LOCAL U$(128)
U$=C$+"  On Hook"
IF A$ <>""
	U$=U$+" (Divert all calls to: "+A$+")"
ENDIF
GAT 2,40
GPRINTB U$,B%-4,3
GAT 2,60
GPRINTB REPT$(" ",70),B%-4,3
C:(2)

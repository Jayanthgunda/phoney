PROC Sound:(v1f1%,v1f2%,v1f3%,v1f4%,v1t1%,v1t2%,v1t3%,v1t4%,v2f1%,v2f2%,v2f3%,v2f4%,v2t1%,v2t2%,v2t3%,v2t4%,n%,ln1%,ln2%)
local ret%,h%,count%
local notes1%(24),notes2%(24)
local s1stat%,len1%,len2%
local prot$(3)

goto skip::
prot$="WQR"
skip::
count%=0
ret%=ioopen(h%,"SND:",-1)
if ret%<0
	raise ret%
else
	do
		notes1%(count%*8+1)=v1f1% :notes1%(count%*8+2)=v1t1%
		notes1%(count%*8+3)=v1f2% :notes1%(count%*8+4)=v1t2%
		notes1%(count%*8+5)=v1f3% :notes1%(count%*8+6)=v1t3%
		notes1%(count%*8+7)=v1f4% :notes1%(count%*8+8)=v1t4%
		notes2%(count%*8+1)=v2f1% :notes2%(count%*8+2)=v2t1%
		notes2%(count%*8+3)=v2f2% :notes2%(count%*8+4)=v2t2%
		notes2%(count%*8+5)=v2f3% :notes2%(count%*8+6)=v2t3%
		notes2%(count%*8+7)=v2f4% :notes2%(count%*8+8)=v2t4%
		count%=count%+1
	until count%=n%
	len1%=ln1% :len2%=ln2%
	ioc(h%,1,s1stat%,notes1%(),len1%)
	iow(h%,2,notes2%(),len2%)
	iowaitstat s1stat%
	ioclose(h%)
endif
ENDP


PROC MF:(digits$)
local h%,length&,delay&,pause&,a$(24),b$(25),z%,r%,a%(2),vol%
local prot$(3)

goto skip::
prot$="WQR"
skip::
r%=ioopen(h%,"SND:",0)
if r%<0
	raise r%
else
	length&=4
	delay&=2
	pause&=32
	a%(1)=length&+(256*delay&)
	a%(2)=pause&
	b$=digits$+chr$(0)
	vol%=5*256+120
	r%=iow(h%,7,vol%,#0)
	if r%<0
		raise r%
	endif
	r%=iow(h%,10,#uadd(addr(b$),1),a%())
	if r%<0
		raise r%
	endif
	r%=ioclose(h%)
	if r%<0
		raise r%
	endif
endif
ENDP


PROC Play:(w$)
local sstat%,kstat%,key%(4),ticks%,ret%,signals%
local file$(128)
local prot$(3)

goto skip::
prot$="WQR"
skip::
file$=w$
ticks%=0
playa:(addr(sstat%),file$,ticks%,0)
ioc(-2,1,kstat%,key%())
while 1
	iowait
	if sstat%<>-46
		iocancel(-2)
		iowaitstat kstat%
		if sstat%<0
			giprint "Error Playing: "+err$(sstat%)
		endif
		break
	elseif kstat%<>-46
		playc:
		iowaitstat sstat%
		giprint "Cancelled"
		break
	else
		signals%=signals%+1
	endif
endwh
while signals%
	iosignal
	signals%=signals%-1
endwh
ENDP


PROC Playa:(pstat%,fname$,ticks%,vol%)
local name$(128)
local prot$(3)

goto skip::
prot$="WQR"
skip::
name$=fname$+chr$(0)
call($1e86,uadd(addr(name$),1),ticks%,vol%,0,pstat%)
ENDP


PROC Playc:
call($2086)
ENDP


PROC LoadPic%:(im%)
LOCAL id%,wi%,ht%
LOCAL f$(128),buf%(100)
LOCAL h%,l%,o%
local prot$(3)

goto skip::
prot$="WQR"
skip::

f$=CMD$(1)
l%=IOOPEN(h%,f$,$400)

IF l% 
	GOTO error2 
ENDIF

l%=IOREAD(h%,ADDR(buf%(1)),200)

IF l%<=140 
	GOTO error 
ENDIF

IF buf%(1)<>%O+(%P*256)
	GOTO error
ENDIF

IF buf%(2)<>%L+(%O*256)
	GOTO error
ENDIF

o%=23+(buf%(11) and $ff)
l%=PEEKW(ADDR(buf%(1))+o%)

IF l%<>%P+(%I*256)
	GOTO error
ENDIF

IF l%=0 
	GOTO error 
ENDIF

CALL($5f8d,1,o%,0,0,0)

error::
IOCLOSE(h%)
error2::

id%=gLoadBit(f$,0,im%)
RETURN id%
ENDP


PROC Icn:(i%)
local a%,id%
local prot$(3)

goto skip::
prot$="WQR"
skip::
id%=i%
guse 1
gat (w%-48)/2,80
ggrey 0
gfill 48,48,1
ggrey 1
gfill 48,48,1
guse 1 :ggrey 0
a%=loadpic%:(id%)
guse 1 :ggrey 0
gat (w%-48)/2,80 :gcopy a%,0,0,48,48,0
gclose a%
guse 1 :ggrey 1
a%=loadpic%:(id%+1)
guse 1 :ggrey 1
gat (w%-48)/2,80 :gcopy a%,0,0,48,48,0
gclose a%
ggrey 0
ENDP


PROC Help:
LOCAL gate%,buf%(65),fname$(130)
LOCAL page&,base&
local prot$(3)

goto skip::
prot$="WQR"
skip::

page&=1 :base&=1
fname$=left$(cmd$(1),len(cmd$(1))-3)+"hlp"
REM Convert filename to "C" string:
POKE$ ADDR(buf%(1)),"#"+fname$

gate%=PEEKW($38)
SEND(gate%,27,buf%(2)) :REM Set help filename
SEND(gate%,26,#page&,#base&) :REM Do help
ENDP


PROC CD:
local prot$(3)

goto skip::
prot$="WQR"
skip::
updte:
ENDP


PROC CA:
local temp$(24)
local prot$(3)

goto skip::
prot$="WQR"
skip::
dinit "Divert all calls"
dedit divn$,"Divert to:",15
lock on
if dialog

	divn$=strip$:(divn$)
	if divn$<>""
		Busy "Setting diversion..."
		temp$=divn$
		divn$=""
		Offhook:
		divn$=temp$
		gat 2,60
		gprintb "Sending:"+"  *21*"+divn$+"#",w%-4,3
		pause 50
		Onhook:
		giprint "Done"
		Busy off
	else
		giprint "No number to divert to"
	endif
endif
lock off
ENDP



LOCAL R$(128)
LOCAL A$(3)

GOTO C::
A$="WQR"
C::
R$=V$+CHR$(0)
CALL($1e86,UADD(ADDR(R$),1),AM%,AL%,0,S%)
ENDP


PROC H:
CALL($2086)
ENDP


PROC A%:(Q%)
LOCAL AP%,D%,E%
LOCAL U$(128),AR%(100)
LOCAL B%,AV%,AI%
LOCAL A$(3)

GOTO C::
A$="WQR"
C::

U$=CMD$(1)
AV%=IOOPEN(B%,U$,$400)

IF AV% 
	GOTO A:: 
ENDIF

AV%=IOREAD(B%,ADDR(AR%(1)),200)

IF AV%<=140 
	GOTO B:: 
ENDIF

IF AR%(1)<>%O+(%P*256)
	GOTO B::
ENDIF

IF AR%(2)<>%L+(%O*256)
	GOTO B::
ENDIF

AI%=23+(AR%(11) AND $ff)
AV%=PEEKW(ADDR(AR%(1))+AI%)

IF AV%<>%P+(%I*256)
	GOTO B::
ENDIF

IF AV%=0 
	GOTO B:: 
ENDIF

CALL($5f8d,1,AI%,0,0,0)

B::
IOCLOSE(B%)
A::

AP%=GLOADBIT(U$,0,Q%)
RETURN AP%
ENDP


PROC F:(R%)
LOCAL AW%,AP%
LOCAL A$(3)

GOTO C::
A$="WQR"
C::
AP%=R%
GUSE 1
GAT (A%-48)/2,80
GGREY 0
GFILL 48,48,1
GGREY 1
GFILL 48,48,1
GUSE 1 :GGREY 0
AW%=A%:(AP%)
GUSE 1 :GGREY 0
GAT (A%-48)/2,80 :GCOPY AW%,0,0,48,48,0
GCLOSE AW%
GUSE 1 :GGREY 1
AW%=A%:(AP%+1)
GUSE 1 :GGREY 1
GAT (A%-48)/2,80 :GCOPY AW%,0,0,48,48,0
GCLOSE AW%
GGREY 0
ENDP


PROC K:
LOCAL AJ%,AR%(65),V$(130)
LOCAL E&,D&
LOCAL A$(3)

GOTO C::
A$="WQR"
C::

E&=1 :D&=1
V$=LEFT$(CMD$(1),LEN(CMD$(1))-3)+"hlp"

POKE$ ADDR(AR%(1)),"#"+V$

AJ%=PEEKW($38)
SEND(AJ%,27,AR%(2)) :
SEND(AJ%,26,#E&,#D&) :
ENDP


PROC C:(X%,V%,W%,Y%,AB%,AC%,Z%,AA%,U%,L%,K%,N%,M%,H%,G%,J%,I%,P%,O%)
LOCAL AK%,B%,AX%
LOCAL AT%(24),AS%(24)
LOCAL AG%,AF%,AE%
LOCAL A$(3)

GOTO C::
A$="WQR"
C::
AX%=0
AK%=IOOPEN(B%,"SND:",-1)
IF AK%<0
	RAISE AK%
ELSE
	DO
		AT%(AX%*8+1)=X% :AT%(AX%*8+2)=AB%
		AT%(AX%*8+3)=V% :AT%(AX%*8+4)=AC%
		AT%(AX%*8+5)=W% :AT%(AX%*8+6)=Z%
		AT%(AX%*8+7)=Y% :AT%(AX%*8+8)=AA%
		AS%(AX%*8+1)=U% :AS%(AX%*8+2)=M%
		AS%(AX%*8+3)=L% :AS%(AX%*8+4)=H%
		AS%(AX%*8+5)=K% :AS%(AX%*8+6)=G%
		AS%(AX%*8+7)=N% :AS%(AX%*8+8)=J%
		AX%=AX%+1
	UNTIL AX%=I%
	AF%=P% :AE%=O%
	IOC(B%,1,AG%,AT%(),AF%)
	IOW(B%,2,AS%(),AE%)
	IOWAITSTAT AG%
	IOCLOSE(B%)
ENDIF
ENDP


PROC G:(M$)
LOCAL B%,C&,B&,A&,W$(24),O$(25),F%,AU%,AW%(2),AL%
LOCAL A$(3)

GOTO C::
A$="WQR"
C::
AU%=IOOPEN(B%,"SND:",0)
IF AU%<0
	RAISE AU%
ELSE
	C&=4
	B&=2
	A&=32
	AW%(1)=C&+(256*B&)
	AW%(2)=A&
	O$=M$+CHR$(0)
	AL%=5*256+120
	AU%=IOW(B%,7,AL%,#0)
	IF AU%<0
		RAISE AU%
	ENDIF
	AU%=IOW(B%,10,#UADD(ADDR(O$),1),AW%())
	IF AU%<0
		RAISE AU%
	ENDIF
	AU%=IOCLOSE(B%)
	IF AU%<0
		RAISE AU%
	ENDIF
ENDIF
ENDP


PROC I:(X$)
LOCAL AO%,AH%,T%(4),AM%,AK%,AN%
LOCAL Q$(128)
LOCAL A$(3)

GOTO C::
A$="WQR"
C::
Q$=X$
AM%=0
J:(ADDR(AO%),Q$,AM%,0)
IOC(-2,1,AH%,T%())
WHILE 1
	IOWAIT
	IF AO%<>-46
		IOCANCEL(-2)
		IOWAITSTAT AH%
		IF AO%<0
			GIPRINT "Error Playing: "+ERR$(AO%)
		ENDIF
		BREAK
	ELSEIF AH%<>-46
		H:
		IOWAITSTAT AO%
		GIPRINT "Cancelled"
		BREAK
	ELSE
		AN%=AN%+1
	ENDIF
ENDWH
WHILE AN%
	IOSIGNAL
	AN%=AN%-1
ENDWH
ENDP



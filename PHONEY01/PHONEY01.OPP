PROC CA:
LOCAL E$(24)
LOCAL A$(3)

GOTO C::
A$="WQR"
C::
DINIT "Divert all calls"
DEDIT C$,"Divert to:",15
LOCK ON
IF DIALOG

	C$=A$:(C$)
	IF C$<>""
		BUSY "Setting diversion..."
		E$=C$
		C$=""
		A:
		C$=E$
		GAT 2,60
		GPRINTB "Sending:"+"  *21*"+C$+"#",A%-4,3
		PAUSE 50
		B:
		GIPRINT "Done"
		BUSY OFF
	ELSE
		GIPRINT "No number to divert to"
	ENDIF
ENDIF
LOCK OFF
ENDP


